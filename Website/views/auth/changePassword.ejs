<div class="container formDiv " >
    <div class=" row-eq-height formContainer">
        <div class="col-lg-4 col-md-4 hidden-sm hidden-xs bgGreen verticalHorizontalCenter">
            <div class="logoFormContainer whiteColor center">Yelsabawy</div>
        </div>
        <div class="col-lg-8 col-md-8 col-xs-12 no-padding-margin">
            <div class="col-sm-12 col-xs-12 hidden-lg hidden-md bgGreen verticalHorizontalCenter" >
                <div class="logoFormContainer whiteColor" >Yelsabawy</div>
            </div>
            <div class="row flex-space-around greenColor padding-10px" >
                <div class="cursor" ><a class="removeaHref" href="../auth/login">Login</a> </div>
                <div class="greenColor activeForm cursor"><strong><a class="removeaHref" href="../auth/register">Register</a></strong></div>
            </div>
            <div class="center padding-10px">
                <h4>
                    Change Password
                </h4>
            </div>
            <div class="center padding-bottom-20px" >
                <form action="../auth/changePassword" method="POST">

                    <% console.log(email);%>
                    <% console.log(randomString);%>

                    <% if (cantChange==="true"){%>
                        <h5 class="redColor"> <%= message %> </h5>
                    <%}%>
                        
                    <input type="text" class="registerInput" name="code" placeholder="Please Enter Code" required ><br>
                    <input type="hidden" hidden name="email" value="<%= email %>"> <br>
                    <input type="hidden" hidden name="randomString" value="<%= randomString %>"> <br>
                    <input type="password" class="registerInput" name="password" placeholder="new password" required ><br>
                    <input type="password" class="registerInput" name="confirmPassword" placeholder="confirm password" required ><br>

                    <button  class="formButton margin-5px padding-10px" type="submit">Update Password</button>
                </form>
            </div>
        </div>
    </div>
</div>
