<div id="myBody">    
<!--header1 Start-->
    <%- include('../include/header1'); %>
<!--header1 End-->
<!--header1 Start-->
    <%- include('../include/header2'); %>
<!--header1 End-->
<div class="container formDiv " >
    <div class=" row-eq-height formContainer">
        <div class="col-lg-4 col-md-4 hidden-sm hidden-xs bgGreen verticalHorizontalCenter">
            <div class="logoFormContainer whiteColor center">Yelsabawy</div>
        </div>
        <div class="col-lg-8 col-md-8 col-xs-12 no-padding-margin">
            <div class="col-sm-12 col-xs-12 hidden-lg hidden-md bgGreen verticalHorizontalCenter" >
                <div class="logoFormContainer whiteColor" >Yelsabawy</div>
            </div>
            <div class="row flex-space-around greenColor padding-10px" >
                <div class="cursor" ><a class="removeaHref" href="../auth/login">Login</a> </div>
                <div class="greenColor activeForm cursor"><strong><a class="removeaHref" href="../auth/register">Register</a></strong></div>
            </div>
            <div class="center padding-10px">
                <h4>
                    Create your YOELSABAWY account
                </h4>
            </div>
            <div class="center padding-bottom-20px" >
                <form action="../auth/register" method="POST">

                    <% if (create==="false"){%>
                        <h5 class="redColor"> <%= message %> </h5>
                    <%}%>

                    <input type="text" value="<%- create==='false'? firstname : ''  %>" class="registerInput" name="firstname" placeholder="First Name" required ><br>
                    <input type="text" value="<%- create==='false'? lastname :''  %>" class="registerInput" name="lastname" placeholder="Last Name" required ><br>
                    <input type="text" value="<%- create==='false'? phone :''  %>" class="registerInput" name="phone" placeholder="Phone Number" required ><br>
                    <select class="registerInput" name="government" required>
                        <option disabled selected>Government</option>
                        <option <% if(create=== "false"){ %>  <%= government === 'alexandria' ? 'selected' : ''%> <% } %> value="alexandria">Alexandria</option>
                        <option <% if(create=== "false"){ %>  <%= government === 'cairo' ? 'selected' : ''%> <% } %> value="cairo">Cairo</option>
                    </select><br>
                    <input type="text" value="<%- create==='false'? address :''  %>" class="registerInput " name="address" placeholder="Home Address" required ><br>
                    <input type="email" value="<%- create==='false'? email :''  %>" class="registerInput" name="email" placeholder="Email" required ><br>
                    <input type="password" class="registerInput" name="password" placeholder="Password" required><br>
                    <input type="password" class="registerInput" name="confirmpassword" placeholder="Confirm password" required><br>
                    <a class="margin-5px cursor"  href="../auth/login">Already Have an Account</a><br>
                    <button  class="formButton margin-5px padding-10px" type="submit">Create Account</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>


